<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:divider">@android:color/holo_blue_bright</item>
    </style>

    <style name="normal_tv">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="tv_title_dialog" parent="normal_tv">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="tv_content_dialog" parent="normal_tv">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="text_view_dialog_button">
        <item name="android:textColor">#1E88FE</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>
